<%= div_for post do %>
  <h3>
    <%= link_to post.title, post %>

    <% if post.owned_by? current_user %>
      <span class='actions'>
        <%= link_to "Edit", edit_post_path(post) %>
        <%= link_to "Delete", post, :confirm => "Are you sure?", :method => :delete %>
      </span>
    <% end %>
  </h3>
  <%= simple_format post.content %>
<% end %>